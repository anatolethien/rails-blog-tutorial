<article>
    <h1><%= @article.title %></h1>
    <p><%= @article.body %></p>
    <footer>
        <%= link_to "Edit", edit_article_path, role: "button" %>
        <%= link_to "Delete", article_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, role: "button" %>
    </footer>
</article>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>